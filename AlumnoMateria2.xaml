<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.AlumnoMateria2"
             Title="AlumnoMateria2">
    <ContentPage.Content>
        <StackLayout>

            <Button Text="Guardar" Clicked="irOtraPagina" />

            <ListView x:Name="alumnosListView" ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding AlumnoNombre}" />
                                <Label Text="{Binding AlumnoApellido}" />
                                <Label Text="{Binding AlumnoLegajo}" />
                                <!-- Agrega otros controles para mostrar mÃ¡s propiedades de materia si es necesario -->
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>